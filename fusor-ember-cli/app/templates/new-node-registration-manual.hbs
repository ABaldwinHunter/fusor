<form class="form-horizontal new-node-form-manual">

  {{select-req-f  cssId="manualDriverInput"
                  label="Driver"
                  labelSize='col-xs-3'
                  inputSize='col-xs-4'
                  content=drivers
                  optionLabelPath="content.label"
                  optionValuePath="content.value"
                  value=nodeInfo.driver
                  isValid=isDriverValid
                  showValidationError=showDriverValidationError
                  isRequired=true}}

  {{text-f  cssId="manualAddressInput"
            label=newNodeManualAddressLabel
            type='text'
            labelSize='col-xs-3'
            inputSize='col-xs-4'
            value=nodeInfo.address
            validator=ipAddressValidator
            resetErrorsMessageKey=resetErrorsMessageKey
            isRequired=true}}

  {{text-f  cssId="manualUsernameInput"
            label=newNodeManualUsernameLabel
            type='text'
            labelSize='col-xs-3'
            inputSize='col-xs-4'
            value=nodeInfo.username
            isRequired=true}}

  {{text-f  cssId="manualPasswordInput"
            label=newNodeManualPasswordLabel
            type='password'
            labelSize='form-label-nowrap col-xs-3'
            inputSize='col-xs-4'
            value=nodeInfo.password
            isRequired=true}}

    {{#each nodeInfo.macAddresses as |macAddress key| }}
      {{new-node-registration-mac-address macAddress=macAddress index=key}}
    {{/each}}
</form>
<div class="row">
  <div class="col-xs-offset-3 col-xs-9">
    <button type="button" id="manualAddMacAddressButton" class="btn btn-primary" {{action "addMacAddress"}}><i class="fa fa-plus"></i> Add Another Node</button>
  </div>
</div>
