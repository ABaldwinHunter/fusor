{{#if showErrorMessage}}
  <div class="row">
    <div class='col-md-9'>
      <div class='alert alert-danger rhci-alert'>
          <i class="fa fa-2x fa-exclamation-triangle errorForValidation"></i>
          &nbsp;
          {{errorMsg}}
      </div>
    </div>
  </div>
{{/if}}

<div class='row'>
  <div class='col-md-12'>
    <ul class="nav nav-tabs col-md-12" data-tabs="pills">
        {{#link-to 'review.progress.overview' tagName='li'}}
          <a>Overview</a>
        {{/link-to}}
        {{#link-to 'review.progress.details' tagName='li'}}
          <a>Details</a>
        {{/link-to}}
    </ul>

    <div class="col-md-12">
        {{outlet}}
    </div>

  </div>
</div>

{{#cancel-back-next backRouteName='review.installation'
                    disableBack=false
                    parentController=controller
                    disableCancel=controllers.deployment.isStarted}}
  {{#if isFinished}}
    {{#link-to 'deployments' class='btn btn-primary'}}View Deployments{{/link-to}}
  {{else}}
    <button class='btn btn-primary' disabled=true>Deploying</button>
  {{/if}}
{{/cancel-back-next}}
