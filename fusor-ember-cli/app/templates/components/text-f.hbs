{{#base-f label=label labelSize=labelSize inputSize=inputSize unitsSize=unitsSize unitsLabel=unitsLabel help-inline=help-inline errors=errors isRequired=isRequired hasError=hasError}}

  {{input class="form-control" value=value placeholder=placeholder type=typeInput focus-out="showValidationErrors" id=cssId disabled=disabled autocomplete='off'}}

  {{#if showValidationError}}
    {{#if validIsRequiredAndBlank}}
        <span class="error errorForValidation">
            cannot be blank
        </span>
    {{/if}}

    {{#if passwordTooShort}}
        <span class="error errorForValidation">
            must be 8 or more characters
        </span>
    {{/if}}
  {{/if}}

  <!-- don't need to wait for focus-out -->
  {{#if hasError}}
      <span class="error errorForValidation">
          {{errors.name}}
      </span>
  {{/if}}


  {{yield}}

{{/base-f}}

