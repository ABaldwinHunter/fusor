<div class="clearfix">
   <div class="form-group {{if hasError 'has-error'}}">

      <label class="control-label {{labelClassSize}} {{class}}">
        {{#if isRequired}}
          <span class='errorForValidation'>*</span>
        {{/if}}
        {{label}}
        {{#if showHelpPopover}}
            <span class="pficon pficon-help" style="margin-left: 5px;" title={{helpText}}></span>
        {{/if}}
      </label>

      <div class="{{inputClassSize}}">
        {{yield}}
      </div>

      {{#if showUnits}}
         <div class="{{unitsClassSize}}">
           {{unitsLabel}}
         </div>
      {{/if}}

      <span class='help-block'>
       {{help-inline}}
      </span>

   </div>
</div>