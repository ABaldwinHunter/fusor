<div class='row'>
  <div class='col-md-2 text-right'>
    {{label}}
  </div>

  <div class='col-md-10'>
    {{#if isExternalURL}}
      <a href={{value}} target="_blank">{{value}}</a>
    {{else if isNotALink}}
      {{value}}
    {{else}}
      {{#link-to routeName}}
          {{#if useYieldInstead}}
            {{yield}}
          {{else}}
            {{valueFormatted}}
          {{/if}}
      {{/link-to}}
    {{/if}}

    {{#if showValidationMessage}}
      <span class='errorForValidation'>
        {{#link-to routeName}}
          {{validationMessage}}
        {{/link-to}}
      </span>
    {{/if}}

    {{#if showDefaultMessage}}
      <span class='defaultValue'>
        {{#link-to routeName}}
          {{defaultMessage}}
        {{/link-to}}
      </span>
    {{/if}}
  </div>
</div>