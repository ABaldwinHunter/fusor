<form class="form-inline new-node-detect-form">
  <div class="checkbox new-node-detect-checkbox">
    <label>{{input type="checkbox" name="autoDetectedNodeSelected" checked=host.selected}}</label>
  </div>
  <div class="form-group">
    <label class="control-label new-node-detect-hostnumber">
      {{hostNumber}}.
    </label>
    {{#if multipleMacAddresses}}
      {{#x-select value=host.value id=selectId class="form-control new-node-detect-select" disabled=deselected}}
        <option>Select an interface</option>
        {{#each host.macAddresses as |opt| }}
          {{#x-option value=opt}}{{opt}}{{/x-option}}
        {{/each}}
      {{/x-select}}

    {{else}}
      <span class="new-node-detect-mac-address new-node-form-span {{deselectedTextClass}}">{{host.value}}</span>
    {{/if}}
    <span class="new-node-detect-hostname new-node-form-span {{deselectedTextClass}}">{{host.name}}</span>
  </div>
</form>
