{{#em-modal configName="bs" id="deleteNodeConfirmationModal" closeIfClickedOutside=handleOutsideClick open-if=openDeleteNodeConfirmation close-if=closeDeleteNodeConfirmation}}
  {{#em-modal-title}}
    {{#em-modal-toggler class="close"}}
      <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
    {{/em-modal-toggler}}
    <h4 class="modal-title">Delete Node {{nodeToDeleteLabel}}</h4>
  {{/em-modal-title}}

  {{#em-modal-body}}
    <div class="row">
      <div class="col-xs-12">
        <p>Are you sure you want to delete node {{nodeToDeleteLabel}}?</p>
      </div>
    </div>
  {{/em-modal-body}}

  {{#em-modal-footer}}
    <button type="button" id="deleteNodeCancelButton" class="btn btn-default delete-node-cancel-button" {{action "cancelDeleteNode"}}>Cancel</button>
    <button type="button" id="deleteNodeConfirmButton" class="btn btn-danger delete-node-confirm-button" {{action "confirmDeleteNode"}}>Delete</button>
  {{/em-modal-footer}}
{{/em-modal}}