{{#em-modal configName="bs" id="nodeRegistrationModal" closeIfClickedOutside=handleOutsideClick open-if=openNewNodeRegistrationModal close-if=closeNewNodeRegistrationModal}}
  {{#em-modal-title}}
    {{#em-modal-toggler class="close"}}
      <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
    {{/em-modal-toggler}}
    <h4 class="modal-title">Register Nodes</h4>
  {{/em-modal-title}}

  {{#em-modal-body}}
    <div class="row">
      <div class="col-xs-12">
    {{#if autoDetectionEnabled}}
        <p>Nodes can be added through auto-discovery by an Intelligent Platform Management Interface (IPMI) system, a
          CSV file specifying the desired nodes, or by manually identifying each node.</p>
    {{else}}
      <p>Nodes can be added using a CSV file specifying the desired nodes or by manually identifying each node.</p>
    {{/if}}
        <p>Determine how to register nodes.</p>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-1 col-xs-12">

        {{#if autoDetectionEnabled}}
        <div class='radio'>
          <label>
            {{#radio-button value="ipmi_auto_detect" groupValue=registerNodesMethod id="optionNewNodeMethodAuto"}}{{/radio-button}}
            IPMI auto-detection
          </label>
        </div>
        {{/if}}

        {{#if isNewNodeMethodAuto}}
          {{partial "new-node-registration-auto"}}
        {{/if}}

        <div class="radio">
          <label>
            {{#radio-button value="csv_upload" groupValue=registerNodesMethod id="optionNewNodeMethodCSV"}}{{/radio-button}}
            Upload a CSV file
          </label>
        </div>

        {{#if isNewNodeMethodCSV}}
          {{partial "new-node-registration-csv"}}
        {{/if}}

        <div class="radio">
          <label>
            {{#radio-button value="manual" groupValue=registerNodesMethod id="optionNewNodeMethodManual"}}{{/radio-button}}
            Manual entry
          </label>
        </div>

        {{#if isNewNodeMethodManual}}
          {{partial "new-node-registration-manual"}}
        {{/if}}

      </div>
    </div>
  {{/em-modal-body}}

  {{#em-modal-footer}}
    <button type="button" id="newNodeCancelButton" class="btn btn-default delete-node-cancel-button" {{action "cancelRegisterNodes"}}>
      Cancel
    </button>
    <button type="submit" id="newNodeSubmitButton" class="btn btn-primary new-node-submit-button" disabled={{disableNewNodesSubmit}} {{action "submitRegisterNodes"}}>
      {{newNodeSubmitButtonText}}
    </button>
  {{/em-modal-footer}}
{{/em-modal}}